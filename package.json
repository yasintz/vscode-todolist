{
  "name": "vscode-todo-list",
  "displayName": "vscode-todo-list",
  "description": "Todo app for vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "build:package": "yarn compile && node out/package-json/index.js",
    "build:ui": "rollup -c",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "clean-css": "^4.2.3",
    "node-sass": "^4.13.1",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
    "sirv-cli": "^0.4.4",
    "svelte-preprocess-sass": "^0.2.0",
    "svelte-preprocess": "^3.4.0"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vs-todo-list",
          "title": "Todo List",
          "icon": "resources/activity-bar-item.svg"
        }
      ]
    },
    "views": {
      "vs-todo-list": [
        {
          "id": "todolistExtension:view",
          "name": "All Todos"
        }
      ]
    },
    "commands": [
      {
        "command": "todolistExtension.createTodoList",
        "title": "Create todo list file in .vscode directory"
      },
      {
        "command": "todolistExtension.refreshAll",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "todolistExtension.addTodoItem",
        "title": "Add",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "todolistExtension.editTodoItem",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "todolistExtension.openUi",
        "title": "Open UI",
        "icon": {
          "light": "resources/light/ui.svg",
          "dark": "resources/dark/ui.svg"
        }
      },
      {
        "command": "todolistExtension.deleteTodoItem",
        "title": "Delete",
        "icon": {
          "light": "resources/light/delete.svg",
          "dark": "resources/dark/delete.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "todolistExtension.refreshAll",
          "when": "view == todolistExtension:view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "todolistExtension.addTodoItem",
          "when": "view == todolistExtension:view && (viewItem == vstodolistproject) || (viewItem == vstodolisttitle)",
          "group": "inline"
        },
        {
          "command": "todolistExtension.refreshAll",
          "when": "view == todolistExtension:view && (viewItem == vstodolistproject && viewItem == vstodolisttitle)",
          "group": "inline"
        },
        {
          "command": "todolistExtension.openUi",
          "when": "(view == todolistExtension:view)",
          "group": "inline"
        },
        {
          "command": "todolistExtension.editTodoItem",
          "when": "view == todolistExtension:view && viewItem == vstodolisttodo",
          "group": "inline"
        },
        {
          "command": "todolistExtension.deleteTodoItem",
          "when": "view == todolistExtension:view && viewItem == vstodolisttodo",
          "group": "inline"
        }
      ]
    }
  }
}